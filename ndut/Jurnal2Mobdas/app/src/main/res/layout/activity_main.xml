<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            tools:context=".MainActivity">

            <EditText
                android:id="@+id/e_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/name"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <EditText
                android:id="@+id/e_pr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/praktikum"
                android:inputType="number"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/e_name"
                app:layout_constraintStart_toStartOf="parent"/>
            <EditText
                android:id="@+id/e_ass1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/assesment_1"
                android:layout_marginTop="8dp"
                android:inputType="number"
                app:layout_constraintTop_toBottomOf="@id/e_pr"
                app:layout_constraintStart_toStartOf="parent"/>
            <EditText
                android:id="@+id/e_ass2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/assesment_2"
                android:inputType="number"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/e_ass1"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/t_absensi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/absensi_75"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/black"
                app:layout_constraintEnd_toStartOf="@id/rg"
                app:layout_constraintTop_toBottomOf="@id/e_ass2"/>
            <RadioGroup
                android:id="@+id/rg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="@id/t_absensi"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/e_ass2">

                <RadioButton
                    android:id="@+id/r_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginRight="24dp"
                    android:checked="true"
                    android:text="@string/yes" />
                <RadioButton
                    android:id="@+id/r_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no"
                    app:layout_constraintStart_toEndOf="@id/r_yes"
                    app:layout_constraintTop_toTopOf="@id/r_yes"
                    app:layout_constraintBottom_toBottomOf="@id/r_yes"
                    />
            </RadioGroup>

            <Button
                android:id="@+id/b_hitung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hitung_nilai_akhir"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:padding="5dp"
                android:background="#FFFF4081"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toBottomOf="@id/rg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/b_reset"/>
            <Button
                android:id="@+id/b_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reset"
                android:background="#FFFF4081"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toTopOf="@id/b_hitung"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/b_hitung"
                app:layout_constraintStart_toEndOf="@id/b_hitung"/>
            <TextView
                android:id="@+id/t_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="34sp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/b_hitung"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <ImageView
                android:id="@+id/i_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                app:layout_constraintTop_toBottomOf="@id/t_score"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/i_tscore"
                app:layout_constraintBottom_toBottomOf="@id/i_tscore"
                />
            <TextView
                android:id="@+id/i_tscore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="112sp"
                app:layout_constraintTop_toBottomOf="@id/t_score"
                app:layout_constraintStart_toEndOf="@id/i_score"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</layout>

